{
  "name": "liara-mcp",
  "version": "0.1.4",
  "description": "MCP server for Liara cloud platform - deploy and manage apps, databases, and infrastructure",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "liara-mcp": "dist/index.js",
    "liara-mcp-setup": "bin/setup.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "liara",
    "cloud",
    "deployment",
    "paas",
    "dbaas",
    "iaas",
    "iran",
    "persian",
    "farsi"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/razavioo/liara-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/razavioo/liara-mcp/issues"
  },
  "homepage": "https://github.com/razavioo/liara-mcp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/form-data": "^2.2.1",
    "axios": "^1.6.0",
    "dotenv": "^17.2.3",
    "form-data": "^4.0.5",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^1.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
